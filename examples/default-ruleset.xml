<?xml version="1.0" ?>
<ruleset name="Symotion">
	<description>The Symotion coding standard.</description>

	<!-- Classes -->
	<rule ref="SymotionCodingStandard.Classes.FinalInterface" />

	<!-- Commenting -->
	<rule ref="SymotionCodingStandard.Commenting.BlockPropertyComment" />
	<rule ref="SymotionCodingStandard.Commenting.MethodComment" />
	<rule ref="SymotionCodingStandard.Commenting.MethodCommentReturnTag" />
	<rule ref="SymotionCodingStandard.Commenting.VarPropertyComment" />

	<!-- Control Structures -->
	<rule ref="SymotionCodingStandard.ControlStructures.ControlSignatures" />
	<rule ref="SymotionCodingStandard.ControlStructures.WeakTypesComparisonsWithExplanation" />

	<!-- Debug -->
	<rule ref="SymotionCodingStandard.Debug.DebugFunctionCall" />

	<!-- Namespace -->
	<rule ref="SymotionCodingStandard.Namespaces.ClassNamesWithoutPreSlash" />
	<rule ref="SymotionCodingStandard.Namespaces.UseInAlphabeticalOrder" />

	<!-- Naming -->
	<rule ref="SymotionCodingStandard.Naming.AbstractClassName"/>
	<rule ref="SymotionCodingStandard.Naming.InheritDoc"/>
	<rule ref="SymotionCodingStandard.Naming.InterfaceName"/>
</ruleset>
