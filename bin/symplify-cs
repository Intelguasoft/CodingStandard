#!/usr/bin/env php
<?php

/*
 * This file is part of Symplify
 * Copyright (c) 2012 Tomas Votruba (http://tomasvotruba.cz).
 */

if (file_exists($autoload = __DIR__.'/../../../autoload.php')) {
    require_once $autoload;
} else {
    require_once __DIR__.'/../vendor/autoload.php';
}

$checkCommand = new Symplify\CodingStandard\Command\CheckCommand();
$checkCommand->addRunner(new Symplify\CodingStandard\Runner\SymplifyRunner());
$checkCommand->addRunner(new Symplify\CodingStandard\Runner\Psr2Runner());
$checkCommand->addRunner(new Symplify\CodingStandard\Runner\SymfonyRunner());

$application = new Symfony\Component\Console\Application();
$application->add($checkCommand);
$application->setDefaultCommand('check');
$application->run();
